<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:showIn="@layout/fragment_playnig_game">


    <ImageView
        android:id="@+id/board_background_imageView"
        android:layout_width="324dp"
        android:layout_height="324dp"
        android:src="@drawable/rectangle_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/board_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/board"
        app:layout_constraintBottom_toBottomOf="@+id/board_background_imageView"
        app:layout_constraintEnd_toEndOf="@+id/board_background_imageView"
        app:layout_constraintStart_toStartOf="@+id/board_background_imageView"
        app:layout_constraintTop_toTopOf="@+id/board_background_imageView" />

    <ImageView
        android:id="@+id/xo_imageView1"
        style="@style/xo_images_style"
        app:layout_constraintStart_toStartOf="@+id/board_imageView"
        app:layout_constraintTop_toTopOf="@+id/board_imageView" />

    <ImageView
        android:id="@+id/xo_imageView2"
        style="@style/xo_images_style"
        app:layout_constraintStart_toEndOf="@+id/xo_imageView1"
        app:layout_constraintTop_toTopOf="@+id/board_imageView" />

    <ImageView
        android:id="@+id/xo_imageView3"
        style="@style/xo_images_style"
        app:layout_constraintStart_toEndOf="@+id/xo_imageView2"
        app:layout_constraintTop_toTopOf="@+id/board_imageView" />

    <ImageView
        android:id="@+id/xo_imageView4"
        style="@style/xo_images_style"
        app:layout_constraintStart_toStartOf="@+id/board_imageView"
        app:layout_constraintTop_toBottomOf="@+id/xo_imageView1" />

    <ImageView
        android:id="@+id/xo_imageView5"
        style="@style/xo_images_style"
        app:layout_constraintStart_toEndOf="@+id/xo_imageView1"
        app:layout_constraintTop_toBottomOf="@+id/xo_imageView1" />

    <ImageView
        android:id="@+id/xo_imageView6"
        style="@style/xo_images_style"
        app:layout_constraintStart_toEndOf="@+id/xo_imageView2"
        app:layout_constraintTop_toBottomOf="@+id/xo_imageView1" />


    <ImageView
        android:id="@+id/xo_imageView7"
        style="@style/xo_images_style"
        app:layout_constraintStart_toStartOf="@+id/board_imageView"
        app:layout_constraintTop_toBottomOf="@+id/xo_imageView4" />

    <ImageView
        android:id="@+id/xo_imageView8"
        style="@style/xo_images_style"
        app:layout_constraintStart_toEndOf="@+id/xo_imageView1"
        app:layout_constraintTop_toBottomOf="@+id/xo_imageView4" />

    <ImageView
        android:id="@+id/xo_imageView9"
        style="@style/xo_images_style"
        app:layout_constraintStart_toEndOf="@+id/xo_imageView2"
        app:layout_constraintTop_toBottomOf="@+id/xo_imageView4" />


</androidx.constraintlayout.widget.ConstraintLayout>